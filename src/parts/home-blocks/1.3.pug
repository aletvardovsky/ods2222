include ../section/section.pug
.section
  div(class="color-block bg-color6 mt-5 md:px-0 px-5 pb-1")
    div(class="section-title flex items-end justify-between tracking-tighter md:pb-9 pb-7 leading-none font-bold bb-1-black md:pl-5 lg:pt-48 pt-16")
      div(class="section-title__title whitespace-pre") Why work with us?
      div(class="section-title__number hidden md:block") 1.3
    
    div(class="benefits flex sm:flex-row flex-col md:px-2 md:mb-44")

      div(class="benefit")
        div(class="benefit__img relative bg-color7")
          img(src=require("/images/1_page/1.3_img_1.png") data-scroll data-scroll-id="img-home-1.3-1" class="mix-blend-multiply")
          div(class="absolute left-5 bottom-5")
            include ../icons/number-1.pug
        div(class="benefit__title md:text-4xl text-3xl sm:mt-10 mt-9 font-bold tracking-tighter opacity-50 mb-4") Your Competitors
        div(class="benefit__advantages tracking-tighter opacity-50 bb-1-black")
          each advantage in ['Your legacy disappears', 'Duplicate roles are consolidated', 'Owner and management team are replaced', 'Required to report to a board', 'Bureaucratic and slow moving']
            div(class="benefit__advantage md:text-xl  flex")
              span(class="mr-4 md:mt-3.5 mt-2")
                include ../icons/sad.pug
              span #{advantage}

      div(class="benefit")
        div(class="benefit__img relative bg-color7")
          img(src=require("/images/1_page/1.3_img_2.png") data-scroll data-scroll-id="img-home-1.3-2" class="mix-blend-multiply")
          div(class="absolute left-5 bottom-5")
            include ../icons/number-2.pug
        div(class="benefit__title md:text-4xl text-3xl sm:mt-10 mt-9 font-bold tracking-tighter opacity-50 mb-4") Private Equity
        div(class="benefit__advantages tracking-tighter opacity-50 bb-1-black")
          each advantage in ['Full or partial cash out', '3–6 month process', 'Founders locked in with earn out structure', 'Terms could make your equity worthless', 'Intervene and change your culture', 'Typically flip your company in 3–5 years']
            div(class="benefit__advantage md:text-xl  flex")
              span(class="mr-4 md:mt-3.5 mt-2")
                include ../icons/sad.pug
              span #{advantage}
      
      div(class="benefit")
        div(class="benefit__img relative color-white")
          img(src=require("/images/1_page/1.3_img_3.png") data-scroll data-scroll-id="img-home-1.3-3" class="")
          div(class="absolute left-5 bottom-5")
            include ../icons/number-3.pug
        div(class="benefit__title md:text-4xl text-3xl sm:mt-10 mt-9 font-bold tracking-tighter mb-4") Odin’s Crow
        div(class="benefit__advantages tracking-tighter bb-1-black")
          each advantage in ["Full or partial cash out", "Deal size ranging from $1M-$50M", "30-day process", "Owners can stay or go, we're flexible", "Simple deal structures with cash upfront", "Operate as-is with no culture change", "Holds companies for the long term"]
            div(class="benefit__advantage md:text-xl flex")
              span(class="mr-4 md:mt-3.5 mt-2")
                include ../icons/happy.pug
              span #{advantage}

